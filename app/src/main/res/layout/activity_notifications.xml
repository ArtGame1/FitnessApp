<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NotificationsActivity">

    <!-- Добавляем Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/menuColor"
        android:theme="?attr/actionBarTheme"
        android:elevation="4dp">

        <!-- LinearLayout для размещения стрелки и заголовка -->
        <RelativeLayout
            android:background="@color/menuColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Стрелка назад -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:contentDescription="Назад"
                app:tint="@android:color/white"/>

            <!-- Заголовок -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уведомления"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Кнопка меню -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_move_menu"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="@android:color/white"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Выпадающее меню - ВНЕ Toolbar -->
    <LinearLayout
        android:id="@+id/dropdownMenu"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/menu_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="12dp">

        <!-- Пункт "Удалить все" красного цвета -->
        <TextView
            android:id="@+id/menuDeleteAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Удалить все"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/menu_item_background"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <!-- Остальная разметка -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- ЗАМЕНИТЬ ЭТУ ЧАСТЬ - динамический контейнер для уведомлений -->
        <LinearLayout
            android:id="@+id/notificationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>
</RelativeLayout>