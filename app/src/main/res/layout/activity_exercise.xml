<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activities.ExerciseActivity">

    <!-- Основной контейнер для анимации упражнения -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey"
        android:gravity="center">

        <!-- Анимированное изображение упражнения (основной контент) -->
        <ImageView
            android:id="@+id/exerciseAnimationImageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_above="@+id/centerContainer"
            android:scaleType="fitCenter"
            android:contentDescription="Анимация упражнения"/>

        <!-- Контейнер для таймера и TimePicker -->
        <LinearLayout
            android:id="@+id/centerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Таймер -->
            <TextView
                android:id="@+id/textViewTimer"
                android:text="00:30"
                android:textSize="75sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#40000000"
                android:padding="16dp"
                android:layout_marginTop="10dp"/>

            <!-- Выбор времени -->
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:timePickerMode="spinner"
                android:background="@color/white"
                android:textAlignment="center"/>

        </LinearLayout>

        <!-- Кнопка Старт/Стоп -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStartTimer"
            android:text="@string/start"
            android:textSize="24sp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_grey_stroke"
            android:elevation="8dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"/>

    </RelativeLayout>

    <!-- Верхняя панель поверх всего -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:background="@color/menuColor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBackArrow"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:contentDescription="Назад"/>

        <TextView
            android:id="@+id/textViewDayOfExercise"
            android:text="День 0"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>